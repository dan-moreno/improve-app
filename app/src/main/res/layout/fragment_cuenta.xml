<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCC2FA">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cl.dajomora.improveapp.CuentaFragment"
        android:padding="20dp"
        android:background="#DCC2FA">

        <TextView
            android:id="@+id/tituloCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center"
            android:text="Detalles de la cuenta"
            android:textColor="@color/design_default_color_primary"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tagNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/tituloCuenta"
            android:text="Nombre:"
            android:textColor="@color/design_default_color_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tituloCuenta"
            android:layout_toEndOf="@+id/tagNombre"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tagCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/tagNombre"
            android:text="E-mail:"
            android:textColor="@color/design_default_color_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tagNombre"
            android:layout_toEndOf="@+id/tagCorreo"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tagOcupacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/tagCorreo"
            android:text="Ocupación:"
            android:textColor="@color/design_default_color_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userOcupacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagCorreo"
            android:layout_toEndOf="@+id/tagOcupacion"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagOcupacion"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/design_default_color_primary"
            android:text="EDITAR DATOS"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonSalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/botonEditar"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/design_default_color_primary"
            android:text="CERRAR SESIÓN"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/botonSalir"
            android:layout_marginTop="50dp"
            android:backgroundTint="#8B0000"
            android:text="ELIMINAR CUENTA"
            android:textColor="@color/white" />

    </RelativeLayout>
</ScrollView>